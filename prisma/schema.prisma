generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id                   String   @id @default(cuid())
  title                String   @unique
  shortDescription     String
  technologies         String[]
  folder               String   @unique
  description          Json
  features             Json
  githubURL            String
  liveDemoURL          String?
  releventTechnologies String[]
  start                DateTime
  end                  DateTime
}

model Hobby {
  id                    String    @id @default(cuid())
  label                 String
  title                 String
  description           String
  thumbnailReferenceURL String?
  folder                String
  icon                  HobbyIcon
}

enum HobbyIcon {
  TERMINAL
  MUSIC_NOTE
  SPORTS_ESPORTS
}
