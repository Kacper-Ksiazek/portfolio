generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Project {
  id                   String      @id @default(cuid())
  title                String      @unique
  shortDescription     String
  technologies         String[]
  folder               String      @unique
  type                 ProjectType
  description          Json?
  features             Json?
  githubURL            String?
  liveDemoURL          String?
  releventTechnologies String[]
  start                DateTime
  end                  DateTime
  onlyMentioned        Boolean?    @default(false)
}

model Hobby {
  id                     String    @id @default(cuid())
  label                  String
  title                  String
  description            String
  artistReferenceURL     String?
  artistReferenceTooltip String?
  folder                 String
  icon                   HobbyIcon
}

model School {
  id          String     @id @default(cuid())
  title       String
  type        SchoolType
  url         String
  folder      String
  description String
  start       String
  end         String
}

model PreviousJob {
  id          String   @id @default(cuid())
  country     String   @default("Remote")
  city        String?
  title       String
  start       DateTime
  end         DateTime
  description String
  folder      String

  projectGithubURL    String?
  projectPortfolioURL String?
}

enum HobbyIcon {
  TERMINAL
  MUSIC_NOTE
  SPORTS_ESPORTS
  BOOKS
  CUTTERY
}

enum SchoolType {
  HIGH_SCHOOL
  EXTRA_CLASSES
  UNIVERSITY
  COURSE
}

enum ProjectType {
  PERSONAL
  HACKATHON
  COMMERCIAL
  COLLEGE
}
